{
  "include": ["src/**/*"],
  "exclude": ["node_modules/**/*","dist","src/**/*.test.ts"],
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "types": ["jest"],
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true
  }
}